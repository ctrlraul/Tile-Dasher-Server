{
  "imports": {
    "@data/": "./src/data/",
    "@oak/oak": "jsr:@oak/oak@^17.1.3",
    "@purity/purity": "jsr:@purity/purity@^0.2.1",
    "@raul/env": "jsr:@raul/env@^0.1.0",
    "kysely": "npm:kysely@^0.27.4",
    "kysely-codegen": "npm:kysely-codegen@^0.17.0",
    "oauth4webapi": "npm:oauth4webapi@^3.1.3",
    "pg": "npm:pg@^8.13.1",
    "tweetnacl": "npm:tweetnacl@^1.0.3",
    "uuidv7": "npm:uuidv7@^1.0.2"
  },
  "fmt": {
    "singleQuote": true
  },
  "tasks": {
    "dev": "deno --env-file --watch --allow-env --allow-read --allow-net src/index.ts",
    "get-db-types": "kysely-codegen --camel-case --out-file ./src/database/schema.ts",
    "bundle-battle-system": "deno run -A scripts/bundle-battle-system.ts"
  }
}
